{
    "compilerOptions": {
      "target": "ES2015",
      "module": "ES2015",
      "declaration": true,
      "declarationDir": "./dist",
      "noImplicitAny": true,
      "lib": ["es2017", "es7", "es6", "dom"],
      "outDir": "./dist",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "baseUrl": "./src",
      "paths": {
        "d3": ["../node_modules/d3"]
      }
    },
    "include": [
      "src/**/*"
    ],
    "exclude": ["node_module", "dist"]
}